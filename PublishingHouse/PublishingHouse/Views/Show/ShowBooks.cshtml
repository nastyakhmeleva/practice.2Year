
@{
    ViewBag.Title = "Книги";
    ModelContainer model = new ModelContainer();
}

<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Автор
        </th>
        <th>
            Жанр
        </th>
        <th>
        </th>
    </tr>
    @{
        foreach (Books book in model.BooksSet)
        {
            <tr>
                <td>
                    <a href="~/Show/ShowBookExemplar/@book.Id">
                        @{Write(book.Name);}
                    </a>
                </td>

                <td>
                    <a href="~/Show/ShowAuthor/@book.Author.Id">
                        @{Write(book.Author.Surname + ' ' + book.Author.Name + ' ' + book.Author.SecondName);}
                    </a>
                </td>

                <td>
                    <a href="~/Show/ShowGenre/@book.Genre.Id">
                        @{Write(book.Genre.Name);}
                    </a>
                </td>
                <td>
                    <a href="~/Show/Delete/@book.Id">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    }
</table>

<p><a href="~/AddNewObject/NewBook" class="btn btn-primary btn-lg">Добавить &raquo;</a></p>
